<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--LAYOUT INTESTAZIONE-->
    <LinearLayout
        android:gravity="center"
        android:background="#2271b3"
        android:layout_weight="0.63"
        android:layout_width="match_parent"
        android:layout_height= "0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#2271b3"
            android:text="DOCUMENTO"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_medium" />
    </LinearLayout>


    <FrameLayout
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="UselessLeaf" />


    <!--LAYOUT NOME DOCUMENTO-->
    <LinearLayout
        android:weightSum="3"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:ignore="NestedWeights">

            <TextView
                android:textSize="@dimen/textSize_small"
                android:text="Nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:clickable="true"
                android:onClick="inserisciFeedback"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/imageFeedback"
                android:src="@mipmap/black_like_is"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="black_like" />

            <TextView
                android:id="@+id/counterFeedback"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/nome_documento"
            android:textSize="@dimen/textSize_document"
            android:text="Tjkfiweifrie wjnfn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <!--LAYOUT AUTORE DOCUMENTO-->
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textSize="@dimen/textSize_small"
            android:text="Autore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nome_autore"
            android:textSize="@dimen/textSize_document"
            android:text="Tjkfiweifrie wjnfn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <!--LAYOUT DESCRIZIONE DOCUMENTO-->
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_weight="1.25"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textSize="@dimen/textSize_small"
            android:text="Descrizione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nome_descrizione"
            android:textSize="@dimen/textSize_document"
            android:text="Tjkfiweifrie wjnfn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <!--LAYOUT UNIVERSITA' DOCUMENTO-->
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textSize="@dimen/textSize_small"
            android:text="Università"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nome_universita"
            android:textSize="@dimen/textSize_document"
            android:text="Tjkfiweifrie wjnfn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <!--LAYOUT FACOLTA' DOCUMENTO-->
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textSize="@dimen/textSize_small"
            android:text="Facoltà"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nome_facolta"
            android:textSize="@dimen/textSize_document"
            android:text="Tjkfiweifrie wjnfn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <!--LAYOUT INSEGNAMENTO DOCUMENTO-->
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:textSize="@dimen/textSize_small"
            android:text="Insegnamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nome_insegnamento"
            android:textSize="@dimen/textSize_document"
            android:text="Tjkfiweifrie wjnfn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <!--LAYOUT RIQUADRO VISUALIZZAZIONE DOCUMENTO-->
    <LinearLayout
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/visualizzaDocumento"
            android:src="@mipmap/is_educ"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <FrameLayout
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:ignore="UselessLeaf" />

    <!--LAYOUT BASELINE-->
    <LinearLayout
        android:layout_weight="0.72"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2271b3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconaHome"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:src="@mipmap/home_is"
            tools:ignore="NestedWeights" />

        <ImageView
            android:id="@+id/iconaCarica"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:src="@mipmap/add_is_1"/>

        <ImageView
            android:id="@+id/iconaPost"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:src="@mipmap/post_is"/>

        <ImageView
            android:id="@+id/iconaChat"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:src="@mipmap/chat_is"/>

        <ImageView
            android:id="@+id/iconaProfilo"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:src="@mipmap/user_is"/>
    </LinearLayout>

</LinearLayout>